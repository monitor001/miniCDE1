# Database Configuration
DATABASE_URL="postgresql://minicde_user:minicde_password@HEROKU_POSTGRES_HOST:5432/minicde_bim"
DIRECT_URL="postgresql://minicde_user:minicde_password@HEROKU_POSTGRES_HOST:5432/minicde_bim"

# Database Connection Pooling
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_POOL_IDLE_TIMEOUT=30000
DATABASE_POOL_ACQUIRE_TIMEOUT=60000

# Redis Configuration (for caching)
REDIS_URL="redis://HEROKU_REDIS_HOST:6379"
REDIS_PASSWORD=""
REDIS_DB=0
REDIS_TTL=3600

# JWT Configuration
JWT_SECRET="your_secure_jwt_secret_here"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=3001
NODE_ENV=development

# Performance Configuration
MAX_FILE_SIZE=104857600 # 100MB
ALLOWED_FILE_TYPES="pdf,dwg,rvt,ifc,docx,xlsx,jpg,png"
REQUEST_TIMEOUT=30000
RESPONSE_TIMEOUT=30000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=1000
AUTH_RATE_LIMIT_MAX=5

# File Upload Configuration
UPLOAD_PATH="./uploads"

# Email Configuration
SMTP_HOST="smtp.example.com"
SMTP_PORT=587
SMTP_USER="user@example.com"
SMTP_PASS="your_password"
EMAIL_FROM="CDE BIM <no-reply@example.com>"

# Heroku specific
DATABASE_SHADOW_URL="postgresql://minicde_user:minicde_password@HEROKU_POSTGRES_HOST:5432/minicde_shadow"

# Feature flags
ENABLE_PROJECT_STATS=true
ENABLE_PROJECT_EXPORT=true
ENABLE_PROJECT_SHARING=true 